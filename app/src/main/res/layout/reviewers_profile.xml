<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/tvlayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/text_gradient_writer"
    android:elevation="3dp"
    >

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/writerimage"
        android:layout_gravity="center"

        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tvtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="abcderfgjhg"
            android:textSize="18dp"
            android:textColor="#000"
            android:padding="5dp"

            android:textStyle="bold"
            android:layout_margin="10dp"
            />

        <TextView
            android:id="@+id/tvwriter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jashim uddin"
            android:textSize="18dp"
            android:textColor="#000"
            android:paddingTop="5dp"
            android:paddingRight="4dp"

            android:layout_below="@+id/tvtitle"

            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:id="@+id/tvdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5-5-2005"
            android:textSize="16dp"
            android:textColor="#000"

            android:layout_below="@+id/tvwriter"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:paddingRight="4dp"
            />
    </RelativeLayout>



</LinearLayout>